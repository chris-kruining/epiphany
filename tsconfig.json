{
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "lib/**/*.ts",
        "node_modules/**/*"
    ],
    "compilerOptions": {
        "lib": [ "esnext", "dom" ],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "esnext",
        "rootDir": "src",
        "outFile": "lib/index.d.ts",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    },
}
